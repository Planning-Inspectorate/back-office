#!bin/sh
# - - - - - - - - Global - - - - - - - -

# Node environments
# Example : production, development
NODE_ENV=development

# JS Bundler analyzer (generates a file and opens the browser)
BUNDLE_ANALYZER=false

# - - - - - - - - Server - - - - - - - -

# Enable HTTPS
HTTPS_ENABLED=false

# HTTP port
# Default : 8080
HTTP_PORT=8080
# Default : 3443
HTTPS_PORT=3443

# API specific vars
API_HOST=http://localhost:3000

# Debug module, examples
# DEBUG=express-session

# - - - - - - - - Auth - - - - - - - -

AUTH_CLIENT_ID=<value goes here>
AUTH_CLOUD_INSTANCE_ID=<value goes here>
AUTH_TENANT_ID=<value goes here>
AUTH_CLIENT_SECRET=<value goes here>
AUTH_REDIRECT_URI=<value goes here>

AUTH_INSPECTOR_GROUP_ID=inspector
AUTH_CASEOFFICER_GROUP_ID=case_officer
AUTH_VALIDATIONOFFICER_GROUP_ID=validation_officer

AUTH_DISABLED=true
# Assume the user belongs to the following groups when running with auth
# integration disabled. Groups should be separated by a comma, from the
# configured group ids.
AUTH_SIMULATED_GROUPS=inspector,case_officer,validation_officer
