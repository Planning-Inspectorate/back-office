{% macro attachments(attachments, changeLinks, relevantRepDocumentFolder, caseId) %}
    <h3 class="govuk-heading-m">Attachments</h3>
    <div>
        <a class="govuk-button govuk-button--secondary" href="{{ changeLinks.attachmentUpload }}">Upload files</a>

		<dl class="govuk-summary-list">
			{% for attachment in attachments %}
			<div class="govuk-summary-list__row">
				<dt class="govuk-summary-list__key">
					{{ attachment.filename }}
				</dt>
				<dd class="govuk-summary-list__value">
				</dd>
				<dd class="govuk-summary-list__actions">
					<a class="govuk-link" href="/applications-service/case/{{ caseId }}/project-documentation/{{ relevantRepDocumentFolder.id }}/document/{{ attachment.documentId }}/properties">
						View/edit properties
					</a>
				</dd>
			</div>
			{% endfor %}
		</dl>
    </div>
{% endmacro %}
