{% macro representationStatusTag(status) %}
	{% set statusTagColor = '' %}
	{% set statusLabel = status %}

	{% switch (status | lower) %}
        {% case 'invalid' %}
        {% case 'reffered' %}
        {% case 'withdrawn' %}
            {% set statusTagColor = 'blue' %}
        {% case 'awaiting_review' %}
            {% set statusTagColor = 'grey' %}
            {% set statusLabel = 'awaiting review' %}
		{% case 'unpublished' %}
			{% set statusTagColor = 'grey' %}
			{% set statusLabel = 'unpublished' %}
	{% endswitch %}

	<strong class="govuk-tag govuk-tag--{{statusTagColor}}">{{ statusLabel}}</strong>
{% endmacro %}
