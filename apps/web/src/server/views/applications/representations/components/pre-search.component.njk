{% from "govuk/components/checkboxes/macro.njk" import govukCheckboxes %}

{% macro preSearch(filters, clearFilterRefreshUrl) %}
	<div class="pins-masthead-summary govuk-!-padding-4 govuk-!-margin-bottom-4">
		<div class="govuk-form-group">
			<div class="filter-box">
				{% from "govuk/components/checkboxes/macro.njk" import govukCheckboxes %}
				{{ govukCheckboxes({
					name: "filters",
					classes: "govuk-checkboxes--small",
					fieldset: {
						legend: {
							text: "Filter",
							isPageHeading: false,
							classes: "govuk-fieldset__legend--m"
						}
					},
					items: filters
				}) }}
			</div>
		</div>
		<div class="govuk-button-group govuk-!-margin-top-0" >
			<button class="govuk-button" id="toggleButton" data-module="govuk-button" name="searchUpdated" value="updated">
				Apply filters
			</button>
			<a href="{{ clearFilterRefreshUrl }}" class="govuk-link govuk-link--no-visited-state">
				Clear filters
			</a>
		</div>
	</div>
{% endmacro %}
