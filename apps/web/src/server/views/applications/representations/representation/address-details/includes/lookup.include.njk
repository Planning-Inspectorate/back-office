{% from "govuk/components/fieldset/macro.njk" import govukFieldset %}
{% from "govuk/components/input/macro.njk" import govukInput %}

{% call govukFieldset({
  legend: {
    text: "Enter your postcode",
    classes: "govuk-visually-hidden"
  }
}) %}

  {{ govukInput({
    classes: "govuk-!-width-one-third",
    errorMessage: errors["lookupPostcode"] and {
      text: errors["lookupPostcode"].msg
    },
    id: "lookupPostcode",
    label: {
      text: "Postcode",
      isPageHeading: false
    },
    name: "lookupPostcode",
    value: postcode
  }) }}

{% endcall %}

<div class="govuk-!-margin-bottom-6">
  <a class='govuk-link govuk-body govuk-!-display-inline-block govuk-!-margin-0' href="{{ params.enterWithoutPostcode }}">
    Don't have a UK postcode?
  </a>
</div>
