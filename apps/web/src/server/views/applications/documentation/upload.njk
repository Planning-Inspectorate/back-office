{% extends "app/layouts/app.layout.njk" %}

{% from '../components/applications-header.njk' import applicationsHeader %}
{% from 'app/components/file-uploader.component.njk' import fileUploader %}
{% from "govuk/components/breadcrumbs/macro.njk" import govukBreadcrumbs %}


{% set serviceName = ["Upload files in ", currentFolder, " folder"] | join  %}
{% block pageTitle %}
	{{ pageTitle | default('GOV.UK') }} – {{ serviceName }}
{% endblock %}

{% block header %}
	{{ applicationsHeader(domainType) }}
{% endblock %}

{% block pageHeading %}{% endblock %}

{% block beforeContent %}
	{{
	govukBreadcrumbs({
		classes: 'govuk-!-margin-top-3',
		items: [
			{ href: 'case-view'|url({caseId: caseId, step: 'project-documentation'}), text: 'Project documentation' },
			{ href: 'category', text: 'Acceptance' },
			{ text: currentFolder }
		]
	})
	}}
{% endblock %}

{% block pageContent %}
	{{ fileUploader({
		formId: 1,
		formTitle: serviceName,
		allowedTypes: ['pdf','doc','docx','ppt','pptx','xls','xlsx','jpg','jpeg','mpeg','mp3','mp4','mov','png','tif','tiff' ],
		disclaimerText: "Saving files will default then to ‘Unredacted’ and ‘Not checked’"
	}) }}

{% endblock %}
