{% extends "../applications-create-layout.njk" %}

{% from "govuk/components/radios/macro.njk" import govukRadios %}

{% block stepTitle %}
	Choose a subsector
{% endblock %}


{% block stepForm %}
	{{ govukRadios({
		name: "selectedSubSectorName",
		idPrefix: "selectedSubSectorName",
		errorMessage: errors.selectedSubSectorName | errorMessage,
		items: subSectors | selectItems({valueKey: 'name', labelKey: 'displayNameEn', selectedValue: selectedValue})
	}) }}
{% endblock %}

{% set backLink = 'applications-create'|url({applicationId:applicationId, step: 'sector'}) %}




