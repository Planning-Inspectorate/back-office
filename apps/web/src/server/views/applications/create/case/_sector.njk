{% extends "../applications-create-layout.njk" %}

{% from "govuk/components/radios/macro.njk" import govukRadios %}

{% block stepTitle %}
	Choose a sector
{% endblock %}

{% block stepForm %}
	{{ govukRadios({
		name: 'sectorName',
		idPrefix: 'sectorName',
		errorMessage: errors.sectorName | errorMessage,
		items: sectors | selectItems({valueKey: 'name', labelKey: 'displayNameEn', selectedValue: values.sectorName})
	}) }}
{% endblock %}

{% set backLink = 'applications-create'|url({applicationId:applicationId}) %}
