{% extends "../applications-create-layout.njk" %}

{% from "govuk/components/checkboxes/macro.njk" import govukCheckboxes %}

{% block stepTitle %}
	Choose the type Applicant information you can give
{% endblock %}

{% block stepForm %}
	{{ govukCheckboxes({
		idPrefix: "selectedApplicantInfoTypes",
		name: "selectedApplicantInfoTypes[]",
		items: applicantInfoTypes | selectItems({valueKey: 'name', labelKey: 'displayNameEn'})
	}) }}
{% endblock %}

{% set backLink = 'applications-create'|url({applicationId:applicationId, step: 'geographical-information'}) %}
