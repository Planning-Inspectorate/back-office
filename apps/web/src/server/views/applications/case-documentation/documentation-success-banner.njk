{% extends "../layouts/applications.layout.njk" %}

{% from "govuk/components/panel/macro.njk" import govukPanel %}

{% block pageTitle %}
	{{ serviceName }} â€“ {{ pageTitle | default('GOV.UK') }}
{% endblock %}

{% block beforeContent %}{% endblock %}
{% block pageHeading %}{% endblock %}

{% block pageContent %}
	<div class="govuk-grid-row">
		<div class="govuk-grid-column-two-thirds govuk-!-margin-top-0">
			{{ govukPanel({
				titleText: serviceName,
				html: successMessage
			}) }}

			<div class="govuk-body">
				Return to folder:
				<a href="{{ breadcrumbItems[breadcrumbItems.length - 1].href }}" class="govuk-link">
					{% for breadcrumbItem in breadcrumbItems %}
						<span
							{% if loop.index === breadcrumbItems.length %}
								class="font-weight--700"
							{% endif %}
						>
							{{ breadcrumbItem.text }}
							{% if loop.index < breadcrumbItems.length %}
								>
							{% endif %}
						</span>
					{% endfor %}
				</a>
			</div>
		</div>
	</div>
{% endblock %}
