{% extends "../layouts/applications.layout.njk" %}

{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/table/macro.njk" import govukTable %}


{% set serviceName = "Delete selected document"  %}
{% block pageTitle %}
	{{ serviceName }} â€“ {{ pageTitle | default('GOV.UK') }}
{% endblock %}

{% block beforeContent %}
	{{ govukBackLink({
		text: "Back",
		href: 'document'|url({caseId: caseId, folderId: folderId, documentGuid: documentationFile.guid, step: "properties"})
	}) }}
{% endblock %}

{% block pageHeading %}{% endblock %}

{% block pageContent %}
	<div class="govuk-grid-row">
		<form action='' method='post' class="govuk-grid-column-full govuk-!-margin-top-0">
			<h1 class="govuk-heading-l">{{ serviceName }}</h1>
			<input type="hidden" value="{{ documentationFile.status }}" name="status" />

			{{ govukTable({
				captionClasses: "govuk-table__caption--m",
				head: [
					{
						text: "File name"
					},
					{
						text: "From"
					}
				],
				rows: [
					[
						{
							text: documentationFile.documentName
						},
						{
							text: documentationFile.from
						}
					]
				]
			}) }}

			<p class="govuk-body govuk-!-margin-top-7 govuk-!-margin-bottom-7">
				You are deleting the document from:

				{% for breadcrumbItem in breadcrumbItems %}
					<span class="font-weight--700"> {{ breadcrumbItem.text }}
						{% if loop.index < breadcrumbItems.length %}
							>
						{% endif %}
					</span>
				{% endfor %}
			</p>

			{{ govukButton({ text: "Delete",  classes: "govuk-button--warning" }) }}
		</form>
	</div>
{% endblock %}
