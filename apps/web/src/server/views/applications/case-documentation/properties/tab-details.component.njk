{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% from "govuk/components/inset-text/macro.njk" import govukInsetText %}

{% macro documentationDetailsTab(documentationFile, caseId, folderId, caseIsWelsh) %}

	{% set needsTranscript =
		documentationFile.mime === 'audio/mpeg'
		or documentationFile.mime === 'video/mpeg'
		or documentationFile.mime === 'video/mp4'
		or documentationFile.mime === 'video/quicktime'
		or documentationFile.mime === 'text/html'
 	%}

	{% if needsTranscript %}
		{% set transcriptRow = {
			label: 'Transcript (optional)',
			id: 'transcript',
			value: documentationFile.transcript,
			link: 'transcript'
		} %}
	{% endif %}

	{% if caseIsWelsh %}
		{% set welshDescriptionRow = {
			label: 'Description in Welsh',
			value: documentationFile.descriptionWelsh,
			link: 'descriptionWelsh'
		} %}

		{% set welshWebfilterRow = {
			label: 'Webfilter in Welsh',
			value: documentationFile.filter1Welsh,
			link: 'webfilterWelsh'
		} %}

		{% set welshFromRow = {
			label: 'Who the document is from in Welsh',
			value: documentationFile.authorWelsh,
			link: 'authorWelsh'
		} %}
	{% endif %}

	{% set publishedDate = (documentationFile.datePublished|datestamp({format: 'dd/MM/yyyy'})) if documentationFile.publishedStatus === 'published' else null %}
	{% set statusCanBeChanged = not documentationFile.publishedStatus in ['published', 'awaiting_upload', 'awaiting_virus_check', 'failed_virus_check'] %}

	{% set properties = [
						{label: 'File name', id: 'fileName', value: documentationFile.fileName, link: 'name'},
						{label: 'Description', id: 'description', value: documentationFile.description, link: 'description'},
						welshDescriptionRow,
            			{label: 'Interested Party number', value: documentationFile.interestedPartyNumber, link: 'interestedPartyNumber'},
						{label: 'Who the document is from', id: 'author', value: documentationFile.author, link: 'author'},
						welshFromRow,
						{label: 'Agent (optional)', id: 'representative', value: documentationFile.representative, link: 'agent', optional: true},
						{label: 'Document case stage', id: 'stage', value: documentationFile.stage},
						{label: 'Webfilter', id: 'filter1', value: documentationFile.filter1, link: 'webfilter'},
						welshWebfilterRow,
						{label: 'Document type (optional)', id: 'documentType', value: documentationFile.documentType, link: 'type', optional: true},
						transcriptRow,
						{label: 'Date received', id: 'dateCreated', value: (documentationFile.dateCreated|datestamp({format: 'dd/MM/yyyy'})), link: 'receipt-date'},
						{label: 'Published date', id: 'publishedDate', value: publishedDate, link: 'published-date' if publishedDate else null},
						{label: 'Redaction', id: 'redactedStatus', value: ('Redacted' if documentationFile.redactedStatus === 'redacted' else 'Unredacted') , link: 'redaction'},
						{label: 'Status', id: 'publishedStatus', value: documentationFile.publishedStatus|statusName, link: 'published-status' if statusCanBeChanged else null }
	] %}

	{% set propertiesRow = [] %}

	{% for property in properties %}
		{% if property.link %}
		    {% set documentEditLink = ('document-edit'|url({caseId: caseId, folderId: folderId, documentGuid: documentationFile.documentGuid, step: property.link})) %}
		{% endif %}

		{% if not property.optional and property.value === null and property.link %}
			{% set row = {
				key: {
					text: property.label
				},
				value: {
					html: '<a id="' + property.id + '" class="govuk-link" href="' + documentEditLink + '">' + property.label|enterLabel + '</a>'
				}
			} %}
		{% else  %}
			{% set rowActions = {} %}

			{% if property.link %}
				{% set documentEditLink = ('document-edit'|url({caseId: caseId, folderId: folderId, documentGuid: documentationFile.documentGuid, step: property.link})) %}

				{% set rowActions = {
					href: documentEditLink,
					text: "Change",
					visuallyHiddenText: property.label
				} %}
			{% endif %}

			{% set row = {
				key: {
					text: property.label
				},
				value: {
					text: property.value
				},
				actions: {
					items: [rowActions]
				}
			} %}
		{% endif %}

		{% if property != null %}
			{% set propertiesRow = propertiesRow.concat([row]) %}
		{% endif %}
	{% endfor %}

	<h4 class="govuk-heading-m govuk-!-margin-bottom-4">Document properties</h4>
	{{ govukSummaryList({
        	rows: propertiesRow
        }) }}

{% endmacro %}
