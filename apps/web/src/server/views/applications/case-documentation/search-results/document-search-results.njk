{% extends "../../layouts/applications.layout.njk" %}
{% from "govuk/components/table/macro.njk" import govukTable %}
{% from "govuk/components/pagination/macro.njk" import govukPagination %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "./document-search.component.njk" import applicationDocumentSearch %}


{% set pageTitle = 'Document search results' %}

{% set searchParameters = {query: query, errors: errors, csrfToken: csrfToken, label: "Search cases"} %}

{% block errorSummary %}{% endblock %}

{% block beforeContent %}
<aside>
	{{ govukBackLink({
		text: "Back to applications",
		href: 'dashboard'|url({domainType:domainType})
	}) }}
</aside>
{% endblock %}

{% block pageContent %}


	<div class="govuk-grid-row">
		<div class="govuk-grid-column-two-thirds">
			{{ applicationDocumentSearch(searchParameters) }}
		</div>
	</div>

	<div>
		<p class="govuk-heading-s"> {{ itemCount if itemCount > 0 else 0 }}
			results
		</p>

		{% set rows = [] %}
		{% for searchItem in searchApplicationsItems %}

			{% set rows = rows | concat ([[
				{ html: searchItem.documentRef },
				{ html: searchItem.fileName},
				{ html: createOptionalLink(
												{
													classes: 'govuk-body-s',
													href: 'document'|url({caseId: caseId, folderId: searchItem.folderId, documentGuid: searchItem.documentGuid, step: 'properties'}),
													text:'View'
												}
											), classes: 'govuk-!-width-one-quarter text-align--right' }



			]]) %}
		{% endfor %}

		{% if itemCount > 0 %}
			{{ govukTable({
				classes: 'pins-table--fixed pins-table--bordered',
				head: [
					{ text: "Document reference", classes: 'govuk-!-width-one-half' },
					{ text: "File name", classes: 'govuk-!-width-one-half' },
					{ text: "", classes: 'text-align--right' }
				],
				rows: rows
			}) }}

			{% if pagination.items.length > 1 %}
				{{ govukPagination(pagination) }}
			{% endif %}

		{% endif %}
		{% if itemCount === 0 and query.length > 0 %}
			<hr class="govuk-section-break govuk-section-break--l govuk-section-break--visible">
			<p class="govuk-heading-s"> There are no matching results</p>

			<p class="govuk-body">Improve your search by:</p>
			<ul class="govuk-list govuk-list--bullet">
				<li>double-checking your spelling</li>
				<li>make sure you have the case reference number right</li>
			</ul>
		{% endif %}
	</div>

{% endblock %}

		{% macro createOptionalLink(params) %}
				{% set dataAction = ["data-action=", params.data]|join if params.data else "" %}
				<a {{ dataAction }} class="govuk-link {{ params.classes }}" href="{{ params.href }}">{{ params.text }}</a>
		{% endmacro %}
