{% extends "../layouts/applications.layout.njk" %}
{% from "govuk/components/table/macro.njk" import govukTable %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% block pageTitle %}
  {{ serviceName }} - {{ pageTitle | default('GOV.UK') }}
{% endblock %}

{% block beforeContent %}
  {{ govukBackLink({
    text: "Back",
		href: 'document'|url({caseId: caseId, folderId: folderId, documentGuid: documentationFile.documentGuid, step: "properties"})
  }) }}
{% endblock %}

{% block pageHeading %}{% endblock %}

{% block pageContent %}
  {{ govukTable({
    caption: "Unpublish documents",
    captionClasses: "govuk-table__caption--l",
    firstCellIsHeader: false,
    head: [
      {
        text: "File name"
      },
      {
        text: "From"
      }
    ],
    rows: [
      [
        {
          text: documentationFile.fileName
        },
        {
          text: documentationFile.author
        }
      ]
    ]
  }) }}
  <form method="post" action="" novalidate="novalidate" class="pins-applications-create">
    {{ govukButton({ text: "Unpublish documents" }) }}
  </form>
{% endblock %}
