{% from "govuk/components/radios/macro.njk" import govukRadios %}

{% macro sector(values, errors, sectors, fieldset) %}
	{{ govukRadios({
		name: 'sectorName',
		fieldset: fieldset,
		idPrefix: 'sectorName',
		errorMessage: errors.sectorName | errorMessage,
		items: sectors | selectItems({valueKey: 'name', labelKey: 'displayNameEn', selectedValue: values.sectorName})
	}) }}
{% endmacro %}
