{% extends "../../../layouts/s51-edit.layout.njk" %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% set pageTitle = 'Edit the S51 enquirer' %}

{% block formHeading %}
	<h1 class="govuk-heading-l govuk-!-margin-bottom-5">{{ pageTitle }}</h1>
{% endblock %}

{% block formContent %}
  {{ govukInput({
    label: {
      text: "First name",
      classes: 'font-weight--700'
    },
    id: 'firstName',
    name: 'firstName',
    classes: 'govuk-!-width-one-third',
    errorMessage: errors.enquirerFirstName | errorMessage,
    value: values.firstName
  }) }}
  {{ govukInput({
    label: {
      text: "Last name",
      classes: 'font-weight--700'
    },
    id: 'lastName',
    name: 'lastName',
    classes: 'govuk-!-width-one-third',
    errorMessage: errors.enquirerLastName | errorMessage,
    value: values.lastName
  }) }}
  {{ govukInput({
    label: {
      text: "Organisation",
      classes: 'font-weight--700'
    },
    id: 'enquirer',
    name: 'enquirer',
    classes: 'govuk-!-width-one-third',
    errorMessage: errors.organisation | errorMessage,
    value: values.enquirer
  }) }}
{% endblock %}
