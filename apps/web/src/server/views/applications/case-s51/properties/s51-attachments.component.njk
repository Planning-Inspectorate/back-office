{% macro s51Attachments(attachments) %}
  <h5 class="govuk-heading-m">Attachments</h5>
  {% if attachments.itemCount == 0 %}
    <p>There are no attachments on this item.</p>
  {% else %}
    <table class="govuk-table">
      <thead class="govuk-table__head">
        <tr class="govuk-table__row">
          <th scope="col" class="govuk-table__header">
            File name
          </th>
          <th scope="col" class="govuk-table__header">
            Date added
          </th>
          <th class="govuk-table__header" colspan="5"></th>
        </tr>
      </thead>
      <tbody class="govuk-table__body">
        {% for item in attachments %}
          <tr class="govuk-table__row">
            <td class="govuk-table__cell" colspan="1">
              <p class="file-info">{{ item.title }}</p>
            </td>
            <td class="govuk-table__cell" colspan="3">
              <p class="file-info">{{ item.dateAdded | displayDate }}</p>
            </td>
            <td class="govuk-table__cell govuk-table__cell--center">
              <a href="#">Download</a>
              <a href="#">Delete</a>
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  {% endif %}
{% endmacro %}
