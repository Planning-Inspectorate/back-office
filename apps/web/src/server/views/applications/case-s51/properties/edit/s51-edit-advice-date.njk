{% extends "../../../layouts/applications.layout.njk" %}
{% from '../../../components/inputs/date-input.component.njk' import dateInput %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% block beforeContent %}
	{{ govukBackLink({
		text: "Back to S51 advice",
    href: 's51-item' | url({ caseId: caseId, folderId: folderId, adviceId: adviceId, step: 'properties' })
	}) }}
{% endblock %}
{% block pageHeading %}{% endblock %}
{% block pageContent %}
	<h1 class="govuk-heading-l govuk-!-margin-bottom-5">
    Edit advice date
	</h1>
  <form method="post" action="" novalidate="novalidate" class="govuk-grid-row govuk-!-margin-top-2">
    {{ dateInput({
      layout: {
        fieldName: 'adviceDate',
        label: 'Advice date',
        classes: 'govuk-grid-column-one-third',
        hint: 'For example, 01 02 2000'
      },
      errors: errors,
      values: values
    }) }}
		{{ govukButton({ text: 'Continue' }) }}
  </form>
{% endblock %}
