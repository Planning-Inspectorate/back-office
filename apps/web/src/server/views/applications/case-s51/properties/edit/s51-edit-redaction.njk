{% extends "../../../layouts/s51-edit.layout.njk" %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% block formContent %}
	{% set statusItems = [
		{
			value: 'unredacted',
			text: 'Unredacted'
		}, {
			value: 'redacted',
			text: 'Redacted'
    }
  ]
  %}


	{% set defaultValue = values.redactedStatus if values.redactedStatus !== '' else 'unredacted' %}

  {{ govukRadios({
    name: 'redactedStatus',
    id: 'redactedStatus',
	fieldset: {
	  legend: {
		html: "Edit redacted status",
	  	isPageHeading: true,
	  	classes: "govuk-fieldset__legend--l"
	  }
	},
    items: statusItems,
    errorMessage: errors.redactedStatus,
    items: statusItems | selectItems({valueKey: 'value', labelKey: 'text', selectedValue: defaultValue})

  }) }}
{% endblock %}
