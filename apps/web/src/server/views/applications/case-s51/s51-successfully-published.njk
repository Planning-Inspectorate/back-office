{% extends "../layouts/applications.layout.njk" %}

{% from "govuk/components/panel/macro.njk" import govukPanel %}

{% set isGeneralS51 = case.reference === gs51CaseReference %}
{% set serviceName = ["S51 advice item successfully published ", action] | join %}
{% set messageText = "The S51 advice will show on the NI website within the hour." %}

{% block beforeContent %}{% endblock %}
{% block pageHeading %}{% endblock %}

{% if isGeneralS51 %}
	{% set messageText = "The General S51 advice will show on the NI website within the hour." %}
	{% set serviceName = ["General S51 advice item successfully published ", action] | join %}
{% endif %}

{% block pageContent %}

	{% set bannerDetails%}
	<p>{{items}} item{% if items > 1 %}s{% endif %} published to NI website</p>
	<p class='govuk-!-font-size-19'>
		{% if not isGeneralS51 %}
		Case: {{case.title}}
		<br/>
      	Reference: {{case.reference}}
		{% endif %}
	</p>
	{% endset %}
	<div class="govuk-grid-row">
		<div class="govuk-grid-column-two-thirds govuk-!-margin-top-0">
			{{ govukPanel({
				titleText: serviceName,
				html: bannerDetails
			}) }}

			<div class='govuk-!-font-size-19'>
				<p class='govuk-!-margin-top-0 govuk-!-margin-right-2'>{{ messageText }}</p>
			</div>
			<div class='govuk-!-font-size-19 display--flex'>
				<p class='govuk-!-margin-top-0 govuk-!-margin-right-2'>Return to folder: </p>
				<a href='{{'s51-list'|url({caseId: caseId, folderId: folderId })}}''' class="govuk-link">
					Project documentation > <strong>
						{% if isGeneralS51 %}General {% endif %}S51 Advice</strong>
				</a>
			</div>
		</div>
	</div>
{% endblock %}