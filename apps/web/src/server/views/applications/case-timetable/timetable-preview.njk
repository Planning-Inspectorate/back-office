{% extends "./../layouts/applications.layout.njk" %}
{% from "./components/timetable-items-list.component.njk" import timetableItemsList%}

{% block beforeContent %}
	<div class="govuk-width-container">
		<a class="govuk-back-link" href="{{ backLink }}" >Back to examination timetable</a>
	</div>
{% endblock %}

{% block pageContent %}
    <h1 class="govuk-heading-l">{{ 'Publish' if stage == 'publish' else 'Unpublish' }} examination timetable</h1>
    <p class="govuk-body">Check before {{ 'publishing' if stage == 'publish' else 'unpublishing' }}</p>
    {{ timetableItemsList(timetableItems, caseId) }}
    <form method="post">
        <button class='govuk-button govuk-!-margin-top-5'>{{ 'Publish' if stage == 'publish' else 'Unpublish' }} exam timetable</button>
    </form>
{% endblock %}
