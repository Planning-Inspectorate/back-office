{% extends "./../layouts/applications.layout.njk" %}
{% from "./components/timetable-items-list.component.njk" import timetableItemsList%}

{% block beforeContent %}
<aside>
	<div class="govuk-width-container">
		<a class="govuk-back-link" href="{{ backLink }}" >Back to examination timetable</a>
	</div>
</aside>
{% endblock %}

{% block pageContent %}
    <h1 class="govuk-heading-l">Check details and {{ 'publish' if stage == 'publish' else 'unpublish' }} examination timetable</h1>

    {{ timetableItemsList(timetableItems, caseId, isCaseWelsh) }}
    <form method="post">
        <button class='govuk-button govuk-!-margin-top-5'>{{ 'Publish' if stage == 'publish' else 'Unpublish' }} examination timetable</button>
    </form>
{% endblock %}
