{% extends "app/layouts/app.layout.njk" %}

{% from "govuk/components/panel/macro.njk" import govukPanel %}
{% from "govuk/components/table/macro.njk" import govukTable %}
{% from "inspector/components/appeal-table.component.njk" import appealTable %}

{% set pageTitle = (appeal.siteVisitType | capitalize) + ' site visit booked' %}

{% block pageHeading %}{% endblock %}
{% block pageContent %}
	{{ 
    govukPanel({
      titleText: 'Appeals assigned',
      classes: 'govuk-!-margin-bottom-7'
    })
  }}
  <p class="govuk-body">You need to add these appeals to your Outlook schedule.</p>
  {{
    appealTable({
      appeals: appeals,
      columns: [
        'Appeal reference',
        'Postcode',
        'Appeal age',
        'Appeal type',
        'Specialism',
        'Recommended site visit'
      ],
      selected: selectedAppealIds
    })
  }}
  <h2 class="govuk-heading-m">What next?</h2>
  <ul class="govuk-list">
    <li>
      <a href="/inspector" class="govuk-link">Return to your appeals</a>
    </li>
  </ul>
{% endblock %}
