{% extends "validation/_layout-validation.njk" %}

{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/checkboxes/macro.njk" import govukCheckboxes %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}

{% set appealReferencePrefix = "Appeal reference:" %}
{% set appealReference = "TODO-appealId" %}
{% set backTxt = "Back" %}
{% set continueTxt = "Continue" %}
{% set changeOutcomeTxt = "Change outcome" %}
{% set errorMessage = "Enter why the appeal is invalid." %}
{% set reasonsInvalidLegend = "Reasons the appeal is invalid" %}
{% set invalidAppealDetailsTitle = "Invalid appeal details" %}

{% block beforeContent %}
	{{ govukBackLink({ text: "Back", href: backURL }) }}
{% endblock %}

{% block pageContent %}
	{{ super() }}

	<h1 class="govuk-heading-xl">
		{{invalidAppealDetailsTitle}}
	</h1>

	<form action="" method="post" novalidate>
		{# Form elements go here #}

		<p class="govuk-body">
			{{appealReferencePrefix}}
			{{ appealReference}}
		</p>

		{{
			govukCheckboxes({
				idPrefix: "invalidReasons",
				name: "invalidReasons",
				value: "invalidReasons",
				errorMessage: errors["invalidReasons"] and { text: errors["invalidReasons"].msg },
				fieldset: {
					legend: {
						text: reasonInvalidLegend,
						isPageHeading: true,
						classes: "govuk-fieldset__legend govuk-fieldset__legend--m"
					}
				},
				items: items
			})
		}}

		<div class="govuk-button-group">
			{{ govukButton({ text: text | default('Continue') }) }}
			<a class="govuk-link" href="{{ changeOutcomeURL }}">Change outcome</a>
		</div>
	</form>
{% endblock %}
