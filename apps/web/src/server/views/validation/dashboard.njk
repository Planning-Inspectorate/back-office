{% extends "app/layouts/app.layout.njk" %}

{% from "govuk/components/header/macro.njk" import govukHeader %}
{% from "govuk/components/table/macro.njk" import govukTable %}
{% from "app/components/infoBox.njk" import infoBox %}

{% set pageTitle = 'Appeal submissions for review' %}

{% block pageContent %}
	{% set tableHeadItems = [
		{ text: "Appeal reference" },
		{ text: "Received on" },
		{ text: "Appeal site" }
	]
	%}

	<h2 class="govuk-heading-l govuk-!-margin-bottom-1">
		New appeals
	</h2>

	{% if appealsList.newAppeals.length > 0 %}
		{{ govukTable({
			head: tableHeadItems,
			rows: appealsList.newAppeals })
		}}
	{% else %}
		{{ infoBox("No New Appeals", classes="govuk-!-margin-bottom-8") }}
	{% endif %}

	<h2 class="govuk-heading-l govuk-!-margin-bottom-1">
		Incomplete appeals
	</h2>

	{% if appealsList.incompleteAppeals.length > 0 %}
		{{ govukTable({
			head: tableHeadItems,
			rows: appealsList.incompleteAppeals })
		}}
	{% else %}
		{{ infoBox("No Incomplete Appeals") }}
	{% endif %}
{% endblock %}
