{
  "name": "@pins/api",
  "version": "0.0.0",
  "private": true,
  "description": "PINS Back Office API App",
  "engines": {
    "node": ">=16.14.0"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  },
  "type": "module",
  "scripts": {
    "test": "NODE_ENV=test cross-env ava",
    "coverage": "c8 --reporter=html --reporter=text ava",
    "dev": "npx prisma generate; nodemon --experimental-json-modules -e js ./src/server.js",
    "start": "node ./src/server.js",
    "lint:js": "exit 0",
    "lint:js:fix": "eslint src prisma/seed.js --fix",
    "clean": "rimraf .turbo node_modules dist",
    "swagger-autogen": "node ./src/server/swagger.js",
    "db:migrate": "npx prisma migrate dev",
    "db:migrate:prod": "npx prisma migrate deploy",
    "db:reset": "npx prisma migrate reset",
    "db:seed": "npx prisma db seed",
    "prisma:format": "npx prisma format",
    "prisma:generate": "npx prisma generate",
    "build": "npm run prisma:generate",
    "tscheck": "exit 0"
  },
  "dependencies": {
    "@prisma/client": "3.13.0",
    "body-parser": "1.20.0",
    "c8": "^7.11.2",
    "compression": "1.7.4",
    "cookie-parser": "1.4.6",
    "cors": "2.8.5",
    "date-fns": "2.28.0",
    "dotenv": "16.0.0",
    "express": "4.18.1",
    "express-pino-logger": "^7.0.0",
    "express-validator": "6.14.0",
    "got": "12.0.4",
    "helmet": "5.0.2",
    "joi": "17.6.0",
    "kleur": "4.1.4",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21",
    "log-process-errors": "8.0.0",
    "morgan": "1.10.0",
    "multer": "1.4.4",
    "pino": "^7.11.0",
    "pino-http": "7.0.0",
    "pino-pretty": "^7.6.1",
    "prisma": "3.13.0",
    "swagger-ui-express": "^4.3.0",
    "xstate": "4.31.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/express-pino-logger": "^4.0.3",
    "ava": "^4.2.0",
    "cross-env": "^7.0.3",
    "eslint": "8.14.0",
    "nodemon": "^2.0.16",
    "rimraf": "^3.0.2",
    "sinon": "13.0.2",
    "supertest": "6.2.3",
    "swagger-autogen": "^2.21.1"
  }
}
