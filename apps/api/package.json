{
  "name": "@pins/api",
  "version": "0.0.0",
  "private": true,
  "description": "PINS Back Office API App",
  "engines": {
    "node": ">=16.14.0"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  },
  "type": "module",
  "scripts": {
    "test": "npm run prisma-generate && NODE_ENV=test cross-env ava --no-worker-threads",
    "coverage": "c8 --reporter=html --reporter=text ava",
    "dev": "npm run prisma-generate && nodemon --experimental-json-modules -e js ./src/server.js",
    "start": "node ./src/server.js",
    "lint:js": "eslint src prisma/seed.js",
    "lint:js:fix": "eslint src prisma/seed.js --fix",
    "clean": "rimraf .turbo node_modules dist",
    "swagger-autogen": "node ./src/server/swagger.js",
    "db:migrate": "npx prisma migrate dev",
    "db:migrate:prod": "npx prisma migrate deploy",
    "db:reset": "npx prisma migrate reset",
    "db:seed": "npm run prisma-generate && npx prisma db seed",
    "db:seed:prod": "npm run prisma-generate && NODE_ENV=production npx prisma db seed",
    "prisma:format": "npx prisma format",
    "prisma-generate": "npx prisma generate",
    "tscheck": "npx tsc -p jsconfig.json --maxNodeModuleJsDepth 0"
  },
  "dependencies": {
    "@prisma/client": "^4.2.1",
    "body-parser": "1.20.0",
    "c8": "^7.11.3",
    "compression": "1.7.4",
    "cors": "2.8.5",
    "date-fns": "2.28.0",
    "dotenv": "16.0.1",
    "express": "4.18.1",
    "express-pino-logger": "^7.0.0",
    "express-validator": "6.14.2",
    "got": "12.1.0",
    "helmet": "5.1.0",
    "joi": "17.6.0",
    "lodash-es": "^4.17.21",
    "morgan": "1.10.0",
    "multer": "1.4.4",
    "pino": "^8.1.0",
    "pino-http": "^8.1.0",
    "pino-pretty": "^8.1.0",
    "swagger-ui-express": "^4.4.0",
    "xstate": "4.32.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/express-pino-logger": "^4.0.3",
    "ava": "^4.3.0",
    "cross-env": "^7.0.3",
    "eslint": "8.18.0",
    "nodemon": "^2.0.18",
    "prisma": "^4.2.1",
    "rimraf": "^3.0.2",
    "sinon": "14.0.0",
    "supertest": "6.2.3",
    "swagger-autogen": "^2.21.4"
  }
}
