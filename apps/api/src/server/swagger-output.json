              "type": "array",
              "example": [
                "County Durham LPA",
                "Darlington LPA"
              ],
              "items": {
                "type": "string"
              },
              "xml": {
                "name": "main"
              }
            }
          }
        }
      }
    },
    "/validation/{id}": {
      "get": {
        "description": "Gets appeal to be validated by the Validation Officer",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer",
            "description": "Appeal ID"
          }
        ],
        "responses": {
          "200": {
            "desciption": "Appeal that requires validation",
            "schema": {
              "$ref": "#/definitions/AppealToValidate"
            },
            "description": "OK"
          }
        }
      },
      "patch": {
        "description": "Updates appeal details",
        "parameters": [
          {
            "name": "id",
            "in": "url",
            "required": true,
            "type": "integer",
            "description": "Appeal ID"
          },
          {
            "name": "obj",
            "in": "body",
            "description": "New Details",
            "schema": {
              "$ref": "#/definitions/ChangeAppeal"
            }
          }
        ],
        "responses": {}
      },
      "post": {
        "description": "Sends validation decision",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer",
            "id": "url",
            "description": "Appeal ID"
          },
          {
            "name": "obj",
            "in": "body",
            "description": "Validation Decision",
            "schema": {
              "$ref": "#/definitions/ValidationDecision"
            }
          }
        ],
        "responses": {}
      }
    },
    "/case-officer/": {
      "get": {
        "description": "Gets all appeals for a Case Officer to review",
