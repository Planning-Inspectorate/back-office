        "responses": {
          "200": {
            "description": "Appeals that require validation",
            "schema": {
              "$ref": "#/definitions/AppealsToValidate"
            }
          }
        }
      }
    },
    "/validation/lpa-list": {
      "get": {
        "description": "Gets all LPAs from external API",
        "parameters": [],
        "responses": {
          "200": {
            "description": "All available LPAs",
