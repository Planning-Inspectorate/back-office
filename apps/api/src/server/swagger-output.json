  "paths": {
    "/validation/": {
      "get": {
        "description": "Gets all appeals that need to be validated. The AppealStatus will be either \\'new\\' or \\'incomplete\\'",
        "parameters": [],
        "responses": {
          "200": {
            "description": "Appeals that require validation",
            "schema": {
              "$ref": "#/definitions/AppealsToValidate"
            }
          }
        }
      }
    },
    "/validation/{id}": {
      "get": {
        "description": "Gets appeal to be validated by the Validation Officer",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer",
            "description": "Appeal ID"
          }
        ],
        "responses": {
          "200": {
            "desciption": "Appeal that requires validation",
            "schema": {
              "$ref": "#/definitions/AppealsToValidate"
            },
            "description": "OK"
          }
        }
      },
      "patch": {
        "description": "Updates appeal details",
        "parameters": [
          {
            "name": "id",
            "in": "url",
            "required": true,
            "type": "integer",
            "description": "Appeal ID"
          },
          {
            "name": "obj",
            "in": "body",
            "description": "New Details",
            "schema": {
              "$ref": "#/definitions/ChangeAppeal"
            }
          }
        ],
        "responses": {}
      },
      "post": {
        "description": "Sends validation decision",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer",
            "id": "url",
            "description": "Appeal ID"
          },
          {
            "name": "obj",
            "in": "body",
            "description": "Validation Decision",
            "schema": {
              "$ref": "#/definitions/ValidationDecision"
            }
          }
        ],
        "responses": {}
      }
    },
    "/case-officer/": {
      "get": {
        "description": "Gets all appeals for a Case Officer to review",
        "parameters": [],
        "responses": {
          "200": {
            "description": "Appeals the require Case Officer to check",
            "schema": {
              "$ref": "#/definitions/AppealsForCaseOfficer"
            }
          }
        }
      }
    },
    "/case-officer/{id}": {
      "get": {
        "description": "Gets appeal details for Case Officer to review",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Appeal that requires a Case Officer to check over",
            "schema": {
              "$ref": "#/definitions/AppealForCaseOfficer"
            }
          }
        }
      }
    },
    "/case-officer/{id}/confirm": {
      "post": {
        "description": "",
        "parameters": [],
        "responses": {}
      }
    }
  },
