{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "nsip-exam-timetable.schema.json",
	"title": "Examination Timetable",
	"description": "Examination Timetable for an NSIP Project",
	"type": "object",
	"required": [],
	"properties": {
		"examinationTimetableId": {
			"type": "number",
			"examples": [1242],
			"description": "Unique ID of NSIP Case Examination Timetable"
		},
		"events": {
			"type": "array",
			"items": {
				"$ref": "#/$defs/event"
			}
		}
	},
	"$defs": {
		"event": {
			"type": "object",
			"required": ["title", "description", "type", "date"],
			"properties": {
				"eventId": {
					"type": "number",
					"description": "Event Identifier"
				},
				"type": {
					"type": "string",
					"description": "Compulsory Acquisition Hearing/Deadline/Issue Specific Hearing etc",
					"enum": [
						"Accompanied Site Inspection",
						"Compulsory Acquisition Hearing",
						"Deadline",
						"Deadline For Close Of Examination",
						"Issued By",
						"Issue Specific Hearing",
						"Open Floor Hearing",
						"Other Meeting",
						"Preliminary Meeting",
						"Procedural Deadline (Pre-Examination)",
						"Procedural Decision",
						"Publication Of"
					]
				},
				"eventTitle": {
					"type": "string",
					"description": "Title Of Examination Timetable Event"
				},
				"description": {
					"type": "string"
				},
				"eventDeadlineStartDate": {
					"type": "string",
					"description": "Optional start date for event window",
					"format": "date-time",
					"examples": ["2023-03-26T00:00:00.000"]
				},
				"date": {
					"type": "string",
					"description": "Event Date = effective deadline (end) date",
					"format": "date-time",
					"examples": ["2023-03-26T00:00:00.000"]
				},
				"eventLineItems": {
					"type": "array",
					"items": {
						"$ref": "#/$defs/line-item"
					}
				}
			}
		},
		"line-item": {
			"type": "object",
			"required": ["description"],
			"properties": {
				"eventLineItemId": {
					"type": "number"
				},
				"eventLineItemDescription": {
					"type": "string"
				}
			}
		}
	}
}
