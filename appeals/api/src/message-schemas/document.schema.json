{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"type": "object",
	"$id": "document.schema.json",
	"title": "document",
	"description": "PINS Document Data Model",
	"required": ["filename", "size", "mime", "documentURI", "documentType", "stage", "origin"],
	"properties": {
		"filename": {
			"type": "string",
			"examples": ["filename.pdf"]
		},
		"originalFilename": {
			"type": "string",
			"examples": ["original_filename.pdf"]
		},
		"size": {
			"type": "integer"
		},
		"mime": {
			"type": "string",
			"examples": ["application/pdf"]
		},
		"documentURI": {
			"type": "string",
			"examples": ["https://blobs.azure.com/appeals/64124694/v1/filename.pdf"]
		},
		"dateCreated": {
			"type": "string",
			"format": "date-time"
		},
		"dateReceived": {
			"type": ["string", "null"],
			"format": "date-time"
		},
		"lastModified": {
			"type": ["string", "null"],
			"format": "date-time"
		},
		"virusCheckStatus": {
			"type": "string",
			"examples": ["checked", "not_checked", "failed_virus_check"]
		},
		"published": {
			"type": "boolean"
		},
		"redacted": {
			"type": "boolean"
		},
		"documentType": {
			"type": "string",
			"examples": [
				"applicationForm",
				"decisionLetter",
				"designAndAccessStatement",
				"conservationAreaMap"
			]
		},
		"sourceSystem": {
			"type": "string",
			"examples": ["appeals"]
		},
		"origin": {
			"type": "string",
			"examples": ["citizen", "back-office"]
		},
		"stage": {
			"type": "string",
			"examples": ["lpa_questionnaire", "appellant_case"]
		}
	}
}
