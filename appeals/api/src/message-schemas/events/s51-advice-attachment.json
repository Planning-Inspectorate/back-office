{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "s51-advice-attachment.schema.json",
	"title": "S51 Advice Attachment",
	"description": "This schema is a subset of the Document schema",
	"type": "object",
	"required": ["documentId", "filename", "size", "documentURI", "dateCreated"],
	"properties": {
		"documentId": {
			"type": "string",
			"examples": ["ID23343453"],
			"description": "The unique identifier for the file. This will be different to documentReference"
		},
		"caseId": {
			"type": "string",
			"examples": ["1234"]
		},
		"caseRef": {
			"type": "string",
			"examples": ["EN010120"]
		},
		"filename": {
			"type": "string",
			"examples": ["filename.pdf"],
			"description": "Current stored filename of the file"
		},
		"size": {
			"type": "number",
			"examples": [23452]
		},
		"mime": {
			"type": "string",
			"examples": ["application/pdf"]
		},
		"documentURI": {
			"type": "string",
			"examples": ["blob:https://published/en010120/filename.pdf"]
		},
		"virusCheckStatus": {
			"type": "string",
			"enum": ["not_scanned", "scanned", "affected"]
		},
		"fileMD5": {
			"type": "string",
			"examples": ["b1946ac92492d2347c6235b4d2611184"]
		},
		"dateCreated": {
			"type": "string",
			"format": "date-time",
			"examples": ["2023-03-26T00:00:00.000"]
		},
		"lastModified": {
			"type": "string",
			"format": "date-time",
			"examples": ["2023-03-26T00:00:00.000"]
		},
		"sourceSystem": {
			"type": "string",
			"enum": ["appeals", "back_office", "horizon", "ni_file", "sharepoint"]
		},
		"origin": {
			"type": "string",
			"enum": ["pins", "citizen", "lpa", "ogd"]
		}
	}
}
