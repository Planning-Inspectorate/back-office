    "morgan": "1.10.0",
    "multer": "1.4.4",
    "node-cache": "^5.1.2",
    "node-schedule": "^2.1.0",
    "nunjucks": "^3.2.4",
    "pino": "7.11.0",
    "pino-http": "^7.0.0",
    "pino-pretty": "^7.6.1",
    "pluralize": "8.0.0",
    "redis": "^4.6.10",
    "regenerator-runtime": "^0.13.10",
    "response-time": "2.3.2",
