  },

	"imports": {
    "#environment/*": "./environment/*",
    "#app/*": "./src/server/app/*",
    "#appeals/*": "./src/server/appeals/*",
		"#lib/*": "./src/server/lib/*",
    "#testing/*": "./testing/*"
  }
}
