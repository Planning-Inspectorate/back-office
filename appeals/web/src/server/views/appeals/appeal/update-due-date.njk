{%- extends "app/layouts/app.layout.njk" -%}

{%- from "govuk/components/date-input/macro.njk" import govukDateInput -%}
{%- from "govuk/components/button/macro.njk" import govukButton -%}
{%- from "govuk/components/inset-text/macro.njk" import govukInsetText -%}

{%- set pageTitle = (page.title if page.title else "Update due date") + " - GOV.UK" -%}

{%- set headerMarginBottom -%}
	{% if sideNote %}7{% else %}9{% endif %}
{%- endset -%}

{%- set backLinkUrl -%}
	{{ backButtonUrl }}
{%- endset -%}

{%- block pageHeading -%}
	<div class="govuk-grid-row">
		<div class="govuk-grid-column-full">
			<span class="govuk-caption-xl govuk-!-margin-bottom-1">Appeal {{ appeal.shortReference }}</span>
		</div>
	</div>
{%- endblock -%}

{%- block pageContent -%}
	<div class="govuk-!-margin-bottom-{{ headerMarginBottom }}">
		<h1 class="govuk-fieldset__legend--xl govuk-!-margin-top-0">{{ page.text }}</h1>
		{% if sideNote %}
			{{ govukInsetText({
				text: sideNote
			}) }}
		{% endif %}
	</div>
	<form method="post" novalidate="novalidate">
		{{ govukDateInput({
			id: "due-date",
			namePrefix: "due-date",
			hint: {
				text: "For example, 27 3 2007"
			}
		}) }}
		<p class="govuk-body">If the existing due date still applies, please skip to the confirmation screen.</p>
		<div class="govuk-button-group">
			{{ govukButton({
				text: "Save and continue",
				type: "submit"
			}) }}
			{{ govukButton({
				text: "Skip",
				href: skipButtonUrl,
				classes: "govuk-button--secondary"
			}) }}
		</div>
	</form>
{%- endblock -%}
