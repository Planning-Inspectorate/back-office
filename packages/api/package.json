{
  "name": "api",
  "version": "0.0.0",
  "description": "API for the PINS Back Office",
  "main": "src/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "start:dev": "NODE_ENV=dev nodemon src/server.js | pino-pretty -tlc",
    "test": "jest --coverage --maxWorkers=4",
    "test:cov": "jest --coverage",
    "test:watch": "jest --watchAll --runInBand --coverage",
    "test:tdd": "jest --watchAll --verbose",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write './**/*.js'"
  },
  "lint-staged": {
    "./**/*.js": "npm run lint:fix",
    "./**/*.{js, json}": "npm run format"
  },
  "dependencies": {
    "@pins/common": "file:../common",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "express": "^4.17.1",
    "express-pino-logger": "^6.0.0",
    "js-yaml": "^3.14.1",
    "pino": "^6.13.0",
    "swagger-ui-express": "^4.1.6",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^27.0.6",
    "nodemon": "^2.0.12",
    "pino-pretty": "^5.1.2",
    "prettier": "^2.3.2",
    "supertest": "^6.1.4"
  }
}
