{% extends "layouts/form.njk" %}

{% from "components/button-group.njk" import buttonGroup %}
{% from "components/confirmlist.njk" import confirmList %}
{% from "components/breadcrumb.njk" import breadcrumb %}

{% block pageTitle %}
    Check and confirm - Appeal a householder planning decision - GOV.UK
{% endblock %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <h1 class="govuk-caption-xl">
                Review questionnaire
            </h1>
            <h2 class="govuk-heading-l">Check and confirm</h2>
        </div>
    </div>
    {{ confirmList({
        items: [
            { record: "Review outcome" },
            { record: "Appeal reference" },
            { record: "Appeal site" },
            { record: "Local planning department" }
        ],
    }) }}
    <h2 class="govuk-heading-m">Confirming the questionnaire as complete makes the appeal available to inspectors </h2>
    <div class="govuk-button-group">
        <a href="confirm" role="button" draggable="false" class="govuk-button"> Confirm outcome </a>
    </div>
{% endblock %}