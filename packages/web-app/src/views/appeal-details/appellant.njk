{% extends "layouts/form.njk" %}

{% from "components/button.njk" import button %}
{% from "govuk/components/input/macro.njk" import govukInput %}

{% block formContent %}
  {{ govukInput({
    label: {
      text: "Appellant name"
    },
    id: "appellant-name",
    name: "appellant-name",
    value: appealData.appellantName,
    errorMessage: errors['appellant-name'] and {
      text: errors['appellant-name'].msg
    }
  }) }}

  {{ govukInput({
    label: {
      text: "Appellant email address"
    },
    id: "appellant-email",
    name: "appellant-email",
    spellcheck: false,
    value: appealData.creatorEmailAddress,
    errorMessage: errors['appellant-email'] and {
      text: errors['appellant-email'].msg
    }
  }) }}

  {{ button("Save changes") }}
{% endblock %}
