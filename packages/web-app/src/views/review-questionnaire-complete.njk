{% extends "layouts/two-thirds-page.njk" %}
{% from "govuk/components/panel/macro.njk" import govukPanel %}

{% block backButton %} {% endblock %}

{% set reviewOutcome = "Complete" if outcome === "1" else "Incomplete" %}
{% block pageContent %}
    <div class="govuk-panel govuk-panel--confirmation govuk-!-margin-bottom-7">
        {{ govukPanel({
            titleText: "Outcome confirmed",
            html: "Questionnaire " + reviewOutcome + "<br><strong>" + appealData.caseReference + "</strong>"
        })  }}
    </div>

    {% if outcome === "1" %}
        <p class="govuk-body">The appeal is now available to inspectors.</p>
    {% endif %}
    <h2 class="govuk-heading-m">What next?</h2>
    <p class="govuk-body"><a class="govuk-link" data-cy="review-questionnaires" href="/questionnaires-list">Return to questionnaires for review</a></p>
{% endblock %}