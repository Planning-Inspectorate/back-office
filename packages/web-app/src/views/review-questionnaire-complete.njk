{% extends "layouts/two-thirds-page.njk" %}
{% from "govuk/components/panel/macro.njk" import govukPanel %}

{% block backButton %} {% endblock %}

{% set dashboardLink = dashboardLink %}
{% set questionnairesListLink = questionnairesListLink %}
{% if questionnaireData.missingOrIncorrectDocuments > 0 %}
    {% set status = "incomplete" %}
{% else %}
    {% set status = "complete" %}
{% endif %}

{% block pageContent %}
    <div class="govuk-panel govuk-panel--confirmation govuk-!-margin-bottom-7">
        {{ govukPanel({
            titleText: "Outcome confirmed",
            html: "Questionnaire " + status + "<br><strong>" + appealData.horizonId +"</strong>"
        })  }}
    </div>

    <p class="govuk-body">The appeal is now available to inspectors.</p>
    <h2 class="govuk-heading-m govuk-!-margin-top-9">What next?</h2>
    <p class="govuk-body"><a class="govuk-link" data-cy="dashboard" href="/{{ dashboardLink }}"> Return to dashboard</a></p>
    <p class="govuk-body"><a class="govuk-link" data-cy="review-questionnaires" href="/{{ questionnairesListLink }}">Return to questionnaires for review</a></p>
{% endblock %}