{% extends "layouts/main.njk" %}

{% from "govuk/components/table/macro.njk" import govukTable %}

{% set appealsListDisplayData = [] %}

{% for appeal in appealsListData %}
  {% set appealsListDisplayData = (appealsListDisplayData.push([
    { html: "<a href=\"#\">" + appeal.reference + "</a>" },
    { text: appeal.dateReceived },
    { text: appeal.site }
  ]), appealsListDisplayData) %}
{% endfor %}

{% block pageTitle %}
  Appeal submissions for review - Appeal a householder planning decision - GOV.UK
{% endblock %}

{% block content %}
  <h1 class="govuk-heading-xl">Appeal submissions for review</h1>

  {{ govukTable({
    head: [
      { text: "Appeal reference" },
      { text: "Received on" },
      { text: "Appeal site" }
    ],
    rows: appealsListDisplayData
  }) }}
{% endblock %}
