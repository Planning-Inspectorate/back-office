{% macro filesCell(data) %}

<ul class="govuk-summary-list__value advanced-summary-list-row-value-width  govuk-list">
  {% if data.cellText %}  
    {{data.cellText}}
  {% else %}
    {% for file in data.files %}
      <li>
      {% if file.link %}
        <a class="govuk-link" href={{file.link}}>{{file.text}}</a>
      {% else %}
        {{file.text}}
      {% endif %}
      <li>
    {% endfor %} 
  {% endif %}
</ul>

{% endmacro %}