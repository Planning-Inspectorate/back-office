{% macro doubleCheckboxCell(data, values, errors) %}
{% set error = errors[data.dropDown.subCheckBoxes[0].name] %}
{% set errorName = data.subCheckbox1Name + '-error' %}

<div class="govuk-checkboxes__conditional govuk-checkboxes__conditional--hidden" id="conditional-lpaqreview">
  <div class="govuk-form-group {% if error %}govuk-form-group--error{% endif %}">
    <fieldset class="govuk-fieldset">
    {% if error %}      
      <span class="govuk-error-message" name={{errorName}} data-cy={{errorName}}>
        <span class="govuk-visually-hidden">Error:</span> {{error.msg}}
      </span>
    {% endif %}
      <legend class="govuk-fieldset__legend">{{data.dropDown.title}}</legend>
      <div class="govuk-checkboxes" data-module="govuk-checkboxes">
        {% for subCheckBox in data.dropDown.subCheckBoxes %}
          <div class="govuk-checkboxes__item {% if error %}govuk-input--error{% endif %}">
            <input class="govuk-checkboxes__input" name={{subCheckBox.name}} id={{subCheckBox.name}} data-cy={{subCheckBox.name}} {% if values[subCheckBox.name] === 'on' %}checked=true{% endif %} type="checkbox">
            <label class="govuk-label govuk-checkboxes__label" for={{subCheckBox.name}}>
              {{subCheckBox.text}}
            </label>
          </div>
        {% endfor %}
      </div>
    </fieldset>
  </div>
</div>

{% endmacro %}