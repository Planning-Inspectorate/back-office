{% extends "layouts/form.njk" %}

{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% from "govuk/components/warning-text/macro.njk" import govukWarningText %}
{% from "components/button-group.njk" import buttonGroup %}
{% from "components/breadcrumb.njk" import breadcrumb %}
{% from "components/address.njk" import address %}

{% block pageTitle %}
    Check and confirm - Appeal a householder planning decision - GOV.UK
{% endblock %}

{% block backButton %}
  {{ breadcrumb(breadcrumbs) }}
{% endblock %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <h1 class="govuk-heading-xl">
                Review questionnaire
            </h1>
            <h2 class="govuk-heading-l">Check and confirm</h2>
            {{ govukSummaryList(sections) }}
        </div>
    </div>
    {% if reviewOutcome === 'COMPLETE' %}
        {{ govukWarningText({
            text: "Confirming the questionnaire as complete makes the appeal available to inspectors.",
            iconFallbackText: "Warning"
        }) }}
    {% endif %}
    <div class="govuk-button-group">
        <a href="confirm" role="button" draggable="false" class="govuk-button"> Confirm outcome </a>
        <a class="govuk-link" href="review">Go back to review questionnaire</a>
    </div>
{% endblock %}
