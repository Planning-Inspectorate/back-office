{% extends "layouts/full-page-form.njk" %}
{% from "govuk/components/breadcrumbs/macro.njk" import govukBreadcrumbs %}
{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% from "components/advanced-summary-list.njk" import advancedSummaryList %}
{% from "components/advanced-summary-list-row.njk" import advancedSummaryListRow %}
{% from "components/address.njk" import address %}
{% from "components/button.njk" import button %}

{% block backButton %}
  {{ govukBreadcrumbs({
    items: [
      {
        text: "Questionnaires for review",
        href: "/questionnaires-list"
      },
      {
        text: appealInfo.appealReference
      }
    ]
  }) }}
{% endblock %}

{% block formContent %}
  {{ govukSummaryList({
    rows: [
      { key: {text: appealInfo.appealReferenceTitle},
        value: {text: appealInfo.appealReference} },
      { key: {text: appealInfo.appealSiteTitle},
        value: {html: address(appealInfo.address)} },
      { key: {text: appealInfo.localPlanningDepartmentTitle},
        value: {text: appealInfo.localPlanningDepartment} }
    ]
  }) }}

  <h2 class="govuk-heading-l govuk-!-margin-top-6">{{planningApplication.sectionTitle}}</h2>
  {{advancedSummaryList(planningApplication, ["planningApplicationReference", "decisionNotice", "officersReport", "plansDecision"], values, errors)}}

  <h2 class="govuk-heading-l govuk-!-margin-top-6">{{localPlansPolicies.sectionTitle}}</h2>
  {{advancedSummaryList(localPlansPolicies, ["statutoryDevelopmentPlanPolicies", "otherRelevantPolicies", "supplementaryPlanningDocuments"], values, errors)}}

  <h2 class="govuk-heading-l govuk-!-margin-top-9">{{aboutAppealSite.sectionTitle}}</h2>
  <dl class="govuk-summary-list">
    {{advancedSummaryListRow(aboutAppealSite.nearConservationArea, values, errors)}}
    {% if aboutAppealSite.nearConservationArea.cellText === 'Yes' %}
      {{advancedSummaryListRow(aboutAppealSite.conservationAreaMapGuidance, values, errors)}}
    {% endif %}
    {{advancedSummaryListRow(aboutAppealSite.conservationAreaMapGuidance, values, errors)}}
    {{advancedSummaryListRow(aboutAppealSite.developmentAffectSettings, values, errors)}}
    {% if aboutAppealSite.developmentAffectSettings.cellText === 'Yes' %}
      {{advancedSummaryListRow(aboutAppealSite.listingDescription, values, errors)}}
    {% endif %}
  </dl>

  <h2 class="govuk-heading-l govuk-!-margin-top-6">{{interestedParties.sectionTitle}}</h2>
  {{advancedSummaryList(interestedParties, ["applicationNotification", "applicationPublicity", "representations", "appealNotification"], values, errors)}}

  <h2 class="govuk-heading-l govuk-!-margin-top-9">{{finishedReviewTitle}}</h2>
  {{ button() }}
{% endblock %}