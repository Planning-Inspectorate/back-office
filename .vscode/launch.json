    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Web APP: Dev",
			"runtimeExecutable": "npm",
			"runtimeArgs": [
				"run",
				"dev",
				"--inspect-brk"
			],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${workspaceFolder}/apps/web",
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen"
        },
		{
            "type": "pwa-node",
            "request": "launch",
            "name": "API APP: Dev",
			"runtimeExecutable": "npm",
			"runtimeArgs": [
				"run",
				"dev",
				"--inspect-brk"
			],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${workspaceFolder}/apps/api",
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen"
        }
    ]
}
