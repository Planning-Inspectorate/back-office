{
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "engines": {
    "node": ">=16.14.0"
  },
  "scripts": {
    "api": "npm run dev --workspace=@pins/api",
    "build": "turbo run build",
    "build:release": "turbo run build:release",
    "clean": "turbo run clean && rimraf node_modules",
    "dev": "turbo run dev --no-cache --parallel --continue",
    "format": "prettier --write \"**/*.{js}\"",
    "lint:js": "turbo run lint:js --filter=!@pins/api",
    "lint:js:fix": "turbo run lint:js:fix",
    "prepare": "node -e \"try { require('husky').install() } catch (e) {if (e.code !== 'MODULE_NOT_FOUND') throw e}\"",
    "test": "turbo run test --filter=!@pins/api",
    "tscheck": "turbo run prisma:generate && turbo run tscheck --parallel --filter=!@pins/api",
    "web": "npm run dev --workspace=@pins/web"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.1",
    "@commitlint/config-conventional": "^17.0.0",
    "@commitlint/prompt-cli": "^17.0.0",
    "eslint": "^8.14.0",
    "husky": "^8.0.0",
    "lint-staged": "^12.4.1",
    "lodash": "^4.17.21",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "turbo": "1.2.14",
    "typescript": "^4.6.4"
  },
  "packageManager": "npm@8.5.1",
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ],
    "*.{js,ts,json,md}": [
      "prettier --write"
    ]
  }
}
