{
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "engines": {
    "node": ">=16.14.0"
  },
  "scripts": {
    "build": "turbo run build",
    "build:release": "turbo run build:release",
    "dev": "turbo run dev --no-cache --parallel --continue",
    "lint:js": "turbo run lint:js",
    "lint:js:fix": "turbo run lint:js:fix",
    "test": "turbo run test",
    "clean": "turbo run clean && rimraf node_modules",
    "format": "prettier --write \"**/*.{js}\""
  },
  "devDependencies": {
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "turbo": "^1.2.8",
    "typescript": "^4.6.4"
  },
  "packageManager": "npm@8.5.1"
}
